<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">


    <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_weight="1"
            android:background="#000000">

        <TableRow

                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                >


            <TextView
                    android:background="#ffffff"
                    android:textSize="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"

                    android:textColor="#ffffff"
                    android:gravity="center"
                    android:padding="1dp"
                    android:text="1\n1"
                    android:layout_weight="0.5"

                    />

            <TextView
                    android:background="#ffffff"
                    android:textSize="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:gravity="center"
                    android:padding="1dp"
                    android:text="금요일\n7월 4일"
                    android:layout_weight="1"
                    />
            <TextView
                    android:background="#ffffff"
                    android:textSize="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:gravity="center"
                    android:padding="1dp"
                    android:layout_weight="1"
                    android:text="월요일\n7월 7일"
                    />
            <TextView
                    android:background="#ffffff"
                    android:textSize="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:gravity="center"
                    android:padding="1dp"
                    android:layout_weight="1"
                    android:text="화요일\n7월 8일"
                    />
            <TextView android:background="#ffffff" android:textSize="15dp" android:layout_width="match_parent"
                      android:layout_height="wrap_content" android:layout_marginBottom="1dp" android:gravity="center"
                      android:padding="1dp" android:layout_weight="1" android:text="수요일\n7월 9일"
                    />

        </TableRow>
        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="#ffffff"
                android:paddingBottom="10dp"
                >

            <TextView
                    android:background="#ffffff"
                    android:textSize="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="3dp"
                    android:gravity="center"
                    android:padding="1dp"
                    android:text="1"
                    android:layout_weight="0.5"
                    />
            <TextView
                    android:background="#ffffff"
                    android:id="@+id/t1_1"
                    android:textSize="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:gravity="center"
                    android:padding="1dp"
                    android:text="1"
                    android:layout_weight="1"
                    />
            <TextView
                    android:background="#ffffff"
                    android:id="@+id/t2_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:gravity="center"
                    android:padding="1dp"
                    android:layout_weight="1"
                    android:text="1"
                    android:textSize="15dp"/>
            <TextView
                    android:background="#ffffff"
                    android:id="@+id/t3_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:gravity="center"
                    android:padding="1dp"
                    android:layout_weight="1"
                    android:text="1"
                    android:textSize="15dp"/>
            <TextView android:background="#ffffff" android:id="@+id/t4_1" android:layout_width="match_parent"
                      android:layout_height="wrap_content" android:gravity="center" android:padding="1dp"
                      android:layout_weight="1" android:text="1" android:textSize="15dp"/>

        </TableRow>
        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="#ffffff"
                android:paddingBottom="10dp"
                >
          <TextView
                  android:background="#ffffff"
                  android:textSize="15dp"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginRight="3dp"
                  android:gravity="center"
                  android:padding="1dp"
                  android:text="2"
                  android:layout_weight="0.5"
                  />

            <TextView
                    android:background="#ffffff"
                    android:id="@+id/t1_2"
                    android:textSize="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:gravity="center"
                    android:padding="1dp"
                    android:text="2"
                    android:layout_weight="1"
                    />
            <TextView
                    android:background="#ffffff"
                    android:id="@+id/t2_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:gravity="center"
                    android:padding="1dp"
                    android:layout_weight="1"
                    android:text="2"
                    android:textSize="15dp"/>
            <TextView
                    android:background="#ffffff"
                    android:id="@+id/t3_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:gravity="center"
                    android:padding="1dp"
                    android:layout_weight="1"
                    android:text="2"
                    android:textSize="15dp"/>
          <TextView android:background="#ffffff" android:id="@+id/t4_2" android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:gravity="center" android:padding="1dp"
                    android:layout_weight="1" android:text="2" android:textSize="15dp"/>
      </TableRow>
        <TableRow android:layout_width="fill_parent" android:layout_height="fill_parent" android:background="#ffffff"
                  android:paddingBottom="10dp" android:id="@+id/tableRow">
            <TextView android:background="#ffffff" android:textSize="15dp" android:layout_width="match_parent"
                      android:layout_height="wrap_content" android:layout_marginRight="3dp" android:gravity="center"
                      android:padding="1dp" android:text="2" android:layout_weight="0.5"/>
            <TextView android:background="#ffffff" android:id="@+id/t1_3" android:textSize="15dp"
                      android:layout_width="match_parent" android:layout_height="wrap_content" android:gravity="center"
                      android:padding="1dp" android:text="2" android:layout_weight="1"/>
            <TextView android:background="#ffffff" android:id="@+id/t2_3" android:layout_width="match_parent"
                      android:layout_height="wrap_content" android:gravity="center" android:padding="1dp"
                      android:layout_weight="1" android:text="2" android:textSize="15dp"/>
            <TextView android:background="#ffffff" android:id="@+id/t3_3" android:layout_width="match_parent"
                      android:layout_height="wrap_content" android:gravity="center" android:padding="1dp"
                      android:layout_weight="1" android:text="2" android:textSize="15dp"/>
            <TextView android:background="#ffffff" android:id="@+id/t4_3" android:layout_width="match_parent"
                      android:layout_height="wrap_content" android:gravity="center" android:padding="1dp"
                      android:layout_weight="1" android:text="2" android:textSize="15dp"/>
        </TableRow>
    </TableLayout>
</LinearLayout>